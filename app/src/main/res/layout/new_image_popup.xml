<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/puppet_name"
    android:background="@drawable/puppet_library_background"
    android:id="@+id/new_image_popup">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:text="@string/get_new_image_popup_title"/>
        <ImageButton
            android:id="@+id/new_image_popup_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_action_navigation_close"
            android:onClick="CloseGetNewImagePopup"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:id="@+id/camera_button"
        android:onClick="NewCameraImageClick" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo Gallery"
        android:id="@+id/gallery_button"
        android:onClick="NewGalleryImageClick" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blank Image"
        android:id="@+id/blank_image_button" />
</LinearLayout>