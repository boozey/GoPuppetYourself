<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nakedape.gopuppetyourself.DesignerActivity"
    android:orientation="vertical">
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1">
<com.nakedape.gopuppetyourself.PuppetDesigner
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/designer"
    android:backgroundTint="@color/green"
    android:clickable="false"
    android:backgroundTintMode="src_atop" />
</FrameLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="end">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/palette_button"
            style="?android:buttonBarButtonStyle"
            android:background="@drawable/ic_palette"
            android:onClick="OpenPalette"/>
        <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/show_box_button"
            android:background="@drawable/head_box"
            android:layout_toEndOf="@id/palette_button"
            android:layout_toRightOf="@id/palette_button"
            android:onClick="ShowBoxes"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        style="?android:buttonBarButtonStyle"
        android:text="Save"
        android:onClick="Save"/>
    </RelativeLayout>
</LinearLayout>
