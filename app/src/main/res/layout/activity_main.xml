<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/root_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/stage"
        android:background="@color/dark_grey">

    </RelativeLayout>


    <ImageButton
        android:id="@+id/bottom_left_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/control_button_background"/>
    <ImageButton
        android:id="@+id/record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:layout_above="@id/bottom_left_button"
        android:background="@drawable/ic_action_rec"
        android:onClick="RecordClick"/>

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_above="@id/bottom_left_button"
        android:layout_toRightOf="@id/record_button"
        android:background="@drawable/ic_action_av_play_arrow"
        android:onClick="PlayClick"/>

    <ImageButton
        android:id="@+id/puppet_library_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-12dp"
        android:layout_marginLeft="8dp"
        android:layout_above="@id/bottom_left_button"
        android:layout_toRightOf="@id/bottom_left_button"
        android:background="@drawable/ic_action_av_recent_actors"
        android:onClick="ShowPuppetLibrary"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/bottom_left_button"
        android:layout_toRightOf="@id/bottom_left_button"
        android:paddingBottom="18dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/progress_bar"/>
    <!-- Backstage button bar -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/backstage_button_bar"
        android:visibility="gone">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:buttonBarButtonStyle"
            android:text="Frontstage"
            android:onClick="GoToPerformance"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_button"
            style="?android:buttonBarButtonStyle"
            android:text="New Puppet"
            android:onClick="NewButtonClick"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Background"
            android:background="@drawable/ic_action_set_background"
            android:onClick="BackGroundButtonClick"/>
    </LinearLayout>
    <!-- Frontstage button bar -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/perform_button_bar"
        android:visibility="gone">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/record"
            style="?android:buttonBarButtonStyle"
            android:text="Record"
            android:onClick="RecordClick"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/play"
            android:text="Play"
            android:background="@drawable/ic_action_av_play_arrow"
            android:onClick="PlayClick"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Backstage"
            android:background="@drawable/ic_action_av_recent_actors"
            android:onClick="GoBackstage"/>
    </LinearLayout>
</RelativeLayout>
